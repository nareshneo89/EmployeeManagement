@model HomeDetailsViewModel
@{
    ViewData["Title"] = "Employee Detailes";
    var photoPath = "~/Images/" + (Model.Employee.PhotoPath ?? "Boy.jpg");
}



<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Employee.Name</h1>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top" src="@photoPath" asp-append-version="true" />
                <h4>Employee Id: @Model.Employee.Id</h4>
                <h4>Email: @Model.Employee.Email</h4>
                <h4>department: @Model.Employee.Department</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary m-1">Back</a>                
                <a asp-action="Edit" asp-controller="Home"asp-route-Id="@Model.Employee.Id" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    </div>
</div>

